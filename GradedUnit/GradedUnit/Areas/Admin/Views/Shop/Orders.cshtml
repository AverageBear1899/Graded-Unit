@model IEnumerable<GradedUnit.Areas.Admin.Models.ViewModels.Shop.OrdersForAdminVM>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

@if (!Model.Any())
{
    <h3 class="text-center">There are no orders.</h3>
}
else
{
    

        <table class="table">
            <tr>
                <th>
                    Order Number
                </th>
                <th>
                    Username
                </th>
                <th>
                    Order Details
                </th>
                <th>
                    Created At
                </th>
                <th>
                    Total
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @foreach (var item2 in item.ProductsAndQty)
                        {
                            @item2.Key @:x @item2.Value <br />
            }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        £@Html.DisplayFor(modelItem => item.Total)
                    </td>

                    @if (item.CreatedAt > DateTime.Now.AddHours(-24))
                    {
                        <td>
                            @Html.ActionLink("Cancel Order", "DeleteOrder", new { id = item.OrderNumber })
                        </td>
                    }
                    else if(item.CreatedAt > DateTime.Now.AddHours(-48))
                    {
                        <td>
                            @Html.Label("Dispatched")
                        </td>
                    }
                    else
                    {
                        <td>
                            @Html.Label("Complete")
                        </td>
                    }
                </tr>
            }


        </table>
        @Html.ActionLink("Export as PDF", "GenerateReport", new { orders = Model })

}
